            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="CRSoftware" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
        <TextBlock Text="Installa Windows 11, Linux o ChromeOS Flex su qualsiasi PC" 
                   FontSize="14" Foreground="#7F8C8D" Margin="0,0,0,20"/>

        <ComboBox x:Name="CmbLanguage" SelectedIndex="0" HorizontalAlignment="Right" Width="120" Margin="0,0,0,10">
