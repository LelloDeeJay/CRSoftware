        <TabControl Grid.Row="1" TabStripPlacement="Left">
            <!-- Windows 11 -->
            <TabItem Header="Windows 11">
                <StackPanel Margin="20">
                    <TextBlock Text="Windows 11 (con bypass completo)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
