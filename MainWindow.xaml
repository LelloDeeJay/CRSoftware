<Window x:Class="CRSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CRSoftware - Installa & Ottimizza" Height="650" Width="850"
        Background="#F8F9FA" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <Image Source="Resources/CRSoftware.png" Width="48" Height="48" VerticalAlignment="Center"/>
            <TextBlock Text="CRSoftware" FontSize="28" FontWeight="Bold" Foreground="#212529" Margin="10,0,0,0"/>
            <ComboBox x:Name="CmbLanguage" SelectedIndex="0" Width="130" Margin="20,5,0,0">
                <ComboBoxItem Content="🇮🇹 Italiano" Tag="it"/>
                <ComboBoxItem Content="🇬🇧 Inglese" Tag="en"/>
                <ComboBoxItem Content="🇪🇸 Spagnolo" Tag="es"/>
                <ComboBoxItem Content="🇫🇷 Francese" Tag="fr"/>
                <ComboBoxItem Content="🇩🇪 Tedesco" Tag="de"/>
            </ComboBox>
        </StackPanel>

        <TabControl Grid.Row="1" TabStripPlacement="Left">
            <!-- Windows 11 -->
            <TabItem Header="Windows 11">
                <StackPanel Margin="20">
                    <TextBlock Text="Installa Windows 11 con bypass completo" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock Text="• Bypass TPM 2.0, Secure Boot, CPU non supportata" Foreground="#28A745"/>
                    <TextBlock Text="• ISO ufficiale Microsoft in italiano (o altra lingua)" Foreground="#28A745"/>
                    <Button x:Name="BtnInstallWin11" Content="Scarica e Installa Windows 11" 
                            Height="40" Margin="0,20,0,0" Click="BtnInstallWin11_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Linux -->
            <TabItem Header="Linux">
                <StackPanel Margin="20">
                    <TextBlock Text="Scegli la tua distribuzione Linux" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    <ComboBox x:Name="CmbLinuxDistro" SelectedIndex="0" Margin="0,0,0,20">
                        <ComboBoxItem Content="Ubuntu (GNOME)" Tag="ubuntu"/>
                        <ComboBoxItem Content="Kubuntu (KDE Plasma)" Tag="kubuntu"/>
                        <ComboBoxItem Content="Xubuntu (XFCE - leggero)" Tag="xubuntu"/>
                        <ComboBoxItem Content="Linux Mint (Cinnamon)" Tag="linuxmint"/>
                        <ComboBoxItem Content="Fedora Workstation" Tag="fedora"/>
                        <ComboBoxItem Content="Debian (Stabile)" Tag="debian"/>
                    </ComboBox>
                    <Button x:Name="BtnInstallLinux" Content="Scarica e Installa Linux" 
                            Height="40" Click="BtnInstallLinux_Click"/>
                    <TextBlock Text="ℹ️ La lingua si imposta durante l'installazione." 
                               Foreground="#6C757D" FontSize="12" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- ChromeOS -->
            <TabItem Header="ChromeOS">
                <StackPanel Margin="20">
                    <TextBlock Text="ChromeOS Flex (Google)" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock Text="• Sistema leggero, sicuro, aggiornato da Google" Foreground="#28A745"/>
                    <TextBlock Text="• Ideale per vecchi PC, scuole, uffici" Foreground="#28A745"/>
                    <Button x:Name="BtnInstallChromeOS" Content="Scarica e Installa ChromeOS Flex" 
                            Height="40" Margin="0,20,0,0" Click="BtnInstallChromeOS_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Ottimizzazione Post-Installazione -->
            <TabItem Header="🔧 Ottimizza Sistema">
                <StackPanel Margin="20">
                    <TextBlock Text="Ottimizza Windows dopo l'installazione" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <GroupBox Header="Browser da installare" Margin="0,0,0,15">
                        <StackPanel>
                            <CheckBox x:Name="CbChrome" Content="Google Chrome"/>
                            <CheckBox x:Name="CbFirefox" Content="Mozilla Firefox"/>
                            <CheckBox x:Name="CbBrave" Content="Brave"/>
                            <CheckBox x:Name="CbOpera" Content="Opera"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Alleggerimento sistema" Margin="0,0,0,15">
                        <StackPanel>
                            <CheckBox x:Name="CbBloatware" Content="Rimuovi bloatware Microsoft" IsChecked="True"/>
                            <CheckBox x:Name="CbTelemetry" Content="Disattiva telemetria" IsChecked="True"/>
                            <CheckBox x:Name="CbFastBoot" Content="Abilita Avvio Veloce" IsChecked="True"/>
                            <CheckBox x:Name="CbSSD" Content="Ottimizza per SSD/NVMe" IsChecked="True"/>
                            <CheckBox x:Name="CbServices" Content="Disattiva servizi non essenziali" IsChecked="True"/>
                        </StackPanel>
                    </GroupBox>

                    <Button x:Name="BtnOptimize" Content="Applica Ottimizzazioni" 
                            Height="40" Click="BtnOptimize_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <TextBlock Grid.Row="2" Text="CRSoftware v1.0 — Il tuo tool universale per ogni PC" 
                   HorizontalAlignment="Center" Foreground="#6C757D" FontSize="11" Margin="0,10,0,0"/>
    </Grid>
</Window>