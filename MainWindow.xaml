                           Width="80" Height="80" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    <Button x:Name="BtnInstallChromeOS" Content="Installa ChromeOS Flex" 
                            Height="40" Margin="0,20,0,0" Click="BtnInstallChromeOS_Click"/>
